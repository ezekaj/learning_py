  "categories": [
    "education",
    "productivity",
    "developer",
    "utilities"
  ],
  
  "shortcuts": [
    {
      "name": "AI Playground",
      "short_name": "Playground",
      "description": "Start coding with AI assistance",
      "url": "/playground",
      "icons": [
        {
          "src": "/static/icons/playground-icon.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Lessons",
      "short_name": "Learn",
      "description": "Continue your Python lessons",
      "url": "/lessons",
      "icons": [
        {
          "src": "/static/icons/lessons-icon.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Quizzes",
      "short_name": "Quiz",
      "description": "Test your knowledge",
      "url": "/quizzes",
      "icons": [
        {
          "src": "/static/icons/quiz-icon.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Progress",
      "short_name": "Stats",
      "description": "View your learning progress",
      "url": "/progress",
      "icons": [
        {
          "src": "/static/icons/progress-icon.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  
  "related_applications": [],
  "prefer_related_applications": false,
  
  "protocol_handlers": [
    {
      "protocol": "web+pylearn",
      "url": "/share?code=%s"
    }
  ],
  
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "code_files",
          "accept": [".py", ".txt", "text/plain"]
        }
      ]
    }
  },
  
  "file_handlers": [
    {
      "action": "/open-file",
      "accept": {
        "text/plain": [".py", ".txt"],
        "application/python": [".py"]
      }
    }
  ],
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "launch_handler": {
    "client_mode": "navigate-new"
  },
  
  "handle_links": "preferred",
  
  "scope_extensions": [
    {"origin": "https://python.org"},
    {"origin": "https://docs.python.org"}
  ],
  
  "permissions": [
    "notifications",
    "persistent-storage",
    "background-sync"
  ],
  
  "features": [
    "ai-powered-tutoring",
    "real-time-collaboration",
    "offline-learning",
    "voice-coding",
    "ar-visualization",
    "adaptive-learning",
    "gamification",
    "community-features"
  ]
}
